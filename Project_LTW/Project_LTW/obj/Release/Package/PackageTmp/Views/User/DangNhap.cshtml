<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng Nhập</title>
    <link rel='stylesheet' href='https://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css'>

    <link href="http://localhost:52849/Theme/css/style.css" rel="stylesheet" />
    <link href="~/aDMIN/demo.css" rel="stylesheet" />
    <link href="~/aDMIN/style.css" rel="stylesheet" />
</head>
<body>

    <main>
        <article>
            <div class="wrapper">
                @using (Html.BeginForm("DangNhap", "User", FormMethod.Post, new { @class = "form-signin" }))
                {
                    @*<form action="~/User/DangNhap" method="post" class="form-signin">*@
                    @Html.ValidationSummary(true)
                    <h2 class="form-signin-heading">Please login</h2>
                    <input type="text" class="form-control" name="UserName" placeholder="Type your Username" required="" autofocus="" />
            
                    <input type="password" class="form-control" name="Password" placeholder="Type your Password" required="" />
                   
                    <label class="checkbox">
                        <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Nhớ Mật Khẩu
                    </label>
                    <p class="text-danger"> @ViewBag.ThongBao</p>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>

                }

            </div>
        </article>
    </main>


</body>
</html>


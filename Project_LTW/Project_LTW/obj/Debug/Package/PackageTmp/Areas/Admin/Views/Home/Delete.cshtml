@model  Project_LTW.Models.DongHo
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2>ADMIN CÓ THỰC SỰ MUỐN XÓA ?</h2>
<h3>Bạn quyết định xóa ĐỒNG HỒ này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên đồng hồ :</dt>
        <dd>@Html.DisplayFor(model => model.TenDongHo) </dd>
        <dt> Mô tả: </dt>
        <dd>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n","</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>
        <dt> Ảnh bìa: </dt>
        <dd> <img src="~/Images/@Model.AnhBia" alt=" @Model.TenDongHo"> </dd>
        <dt> Ngày cập nhật:</dt>
        <dd> @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}") </dd>
        <dt> Số lượng bán: </dt>
        <dd> @Html.DisplayFor(model => model.SoLuongBan)</dd>
        <dt>Giá bán: </dt>
        <dd> @Html.FormatValue(@Model.GiaBan, "{00000:#,##0}") VNĐ</dd>
        <dt>Chủ đề:</dt>
        <dd>@Html.DisplayFor(model => model.TenDongHo)</dd>
        <dt>Nhà xuất bản:</dt>
        <dd>@Html.DisplayFor(model => model.MaDongHo)</dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Index")
        </div>
    }
</div>

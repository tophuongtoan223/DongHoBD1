@model IEnumerable<Project_LTW.Models.DongHo>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="popular-items section-padding30">
    <div class="container">
        <!-- Section tittle -->
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <div class="section-tittle mb-70 text-center">
                    <h2>ĐỒNG HỒ ROLEX</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                    <div class="single-popular-items mb-50 text-center">
                        <div class="popular-img">
                            <img src="@item.AnhBia" alt="">
                            <div class="img-cap">
                                <span>Add to cart</span>
                            </div>
                            <div class="favorit-items">
                                <span class="flaticon-heart"></span>
                            </div>
                        </div>
                        <div class="popular-caption">
                            <h3><a href="product_details.html">@item.TenDongHo</a></h3>
                            <span>@string.Format("{0:#,##0,0}", @item.GiaBan)</span>
                            @*<td align="center">@string.Format("{0:#,##0,0}", @item.dThanhTien)</td>*@
                        </div>
                        <!--<div class="popular-caption">
                            <h3><a href="product_details.html">@item.NgaySanXuat</a></h3>-->
                        @*<span>@item.NgaySanXuat</span>*@
                    </div>
                </div>
            }

        </div>
        <!-- Button -->
        <div class="row justify-content-center">
            <div class="room-btn pt-70">
                <a href="catagori.html" class="btn view-btn1">Thêm Vào Giỏ Hàng</a>
            </div>
        </div>
    </div>
</div>


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng Ký Thành Viên PT2002 </title>
    <script src="https://www.google.com/recaptcha/api.js?hl=vi" async defer></script>
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Dki/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Dki/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Đăng Ký </h2>
                        @using (Html.BeginForm("DangKi", "DKDN", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false)
                            <form method="POST" class="register-form" id="register-form">
                                <div class="form-group">
                                    <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    <input type="text" name="HOTEN" id="name" placeholder="Your Name" />
                                </div>
                                <div class="form-group">
                                    <label for="email"><i class="zmdi zmdi-email"></i></label>
                                    <input type="email" name="EMAIL" id="email" placeholder="Your Email" />
                                </div>
                                <div class="form-group">
                                    <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                    <input type="password" name="MATKHAU" id="pass" placeholder="Password" />
                                </div>
                                <div class="form-group">
                                    <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                    <input type="password" name="NLMATKHAU" id="re_pass" placeholder="Repeat your password" />
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                                </div>
                                <div class="form-group form-button">
                                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                </div>
                            </form>
                            <form action="" method="post">
                                <!-- 2. Thêm thẻ div sau vào form của bạn. Thay sitekey thành site key của bạn -->
                                <div class="g-recaptcha" hl="" data-sitekey="6LfRV9EiAAAAAPqXQ6pitw4VXHiZdQ9Qou174Nuj"></div>
                                <br>
                                <input type="submit" value="Submit">
                            </form>
                        }
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Dki/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                    @*<div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="https://www.facebook.com/profile.php?id=100087612693704&is_tour_dismissed=true"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                            <li><a href="https://www.youtube.com/watch?v=psZ1g9fMfeo"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                            <li><a href="https://www.google.com/?hl=vi"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>*@
                </div>
            </div>
        </section>
    </div>



    <!-- JS -->
    <script src="~/Dki/vendor/jquery/jquery.min.js"></script>
    <script src="~/Dki/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

